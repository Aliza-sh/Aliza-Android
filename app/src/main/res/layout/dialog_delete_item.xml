<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/primary_bold"
        android:text="Delete this item anyway?"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_btn_deleteSure"
        app:layout_constraintStart_toStartOf="@+id/dialog_btn_deleteCansel"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_btn_deleteSure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorSecondary"
        android:text="sure"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dialog_btn_deleteCansel"
        app:layout_constraintTop_toTopOf="@+id/dialog_btn_deleteCansel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_btn_deleteCansel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="cansel"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/dialog_btn_deleteSure"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>